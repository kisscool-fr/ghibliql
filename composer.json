{
    "name": "kisscool-fr/ghibliql",
    "description": "GraphQL API wrapper to Ghibli REST API",
    "type": "project",
    "license": "proprietary",
    "homepage": "https://ghibliql.herokuapp.com",
    "authors": [
        {
            "name": "KisSCoOl",
            "email": "kisscool@kisscool.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "GhibliQL\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GhibliQL\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4.10"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.4, <8.5",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.10",
        "predis/predis": "^3.2",
        "webonyx/graphql-php": "^15.25"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "friendsofphp/php-cs-fixer": "^3.86",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "check": "composer validate --check-lock --strict",
        "lint": "php -l lib/ public/ tests/",
        "standard": "./vendor/bin/phpcs --extensions=php --standard=PSR12 lib/ public/ tests/",
        "scan": "./vendor/bin/phpcs --extensions=php --standard=./vendor/pheromone/phpcs-security-audit/example_base_ruleset.xml lib/",
        "stan": "./vendor/bin/phpstan analyse --configuration=phpstan.neon",
        "style": "./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --dry-run --diff --show-progress dots",
        "style-fix": "./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --diff --show-progress dots",
        "test": "./vendor/bin/phpunit --colors=always --display-errors"
    }
}
